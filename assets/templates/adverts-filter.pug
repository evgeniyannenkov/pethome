include ../../views/mixins/_form-parts
div(ng-hide="filter.extended")
    +input("General")(ng-model="filter_fields")
div(ng-show="filter.extended")
    +input("Name")(ng-model="filter_fields.name")
button(ng-click="filter_fields = {};filter.extended = true;" ng-hide="filter.extended") Extended
button(ng-click="filter_fields = '';filter.extended = false;" ng-show="filter.extended") General