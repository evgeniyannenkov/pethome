include ../../views/mixins/formParts
include ../../views/mixins/buttons


.filter__search
    .filter__search-field
        i.fa.fa-search(ng-click="filter.fields = '';filter.extended = false;")
        input(ng-model = "filter.fields" ng-focus="filter.fields = '';filter.extended = false;" ng-class="{disabled: filter.extended}" placeholder="{{'General Search' | translate}}")
    button.filter__search-btn(ng-class="{'active': filter.extended}" ng-click="filter.fields = filter.defaults;filter.extended = true;") {{'Extended Search' | translate}}


.filter__inner(ng-show="filter.extended")
    .filter__item
        +input("Name")(ng-change = "filter.fieldChange('name')" ng-model = "filter.fields.name")
    .filter__item
        +select("Type", {
            "type" : {
                "" : "All",
                "dog" : "Dog",
                "cat" : "Cat",
                "hamster" : "Hamster"
            }
        })(ng-change = "filter.fieldChange('type')" ng-model = "filter.fields.type")
    .filter__item
        +input("Breed")(ng-change = "filter.fieldChange('breed')" ng-model = "filter.fields.breed")
    .filter__item
        +radios("Gender", {
            "gender" : {
                "" : "Both",
                "male" : "Male",
                "female" : "Female"
            }
        })(ng-change = "filter.fieldChange('gender')" ng-model = "filter.fields.gender")