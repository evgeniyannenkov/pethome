h3 {{advertiser.info.name}}
h3 {{advertiser.info.contactInfo.email}}
h3 {{advertiser.info.contactInfo.phone}}

div(popup type="profile" ng-if="edit")
    popup-trigger
        button Edit Profile
    popup-content
        .popup__content
            div(advertiser-edit="$parent.$parent.$parent.advertiser.info")
div(popup type="Remove Profile" ng-if="remove")
    popup-trigger
        button Remove Profile
    popup-content
        .popup__content
            div(advertiser-remove="$parent.$parent.$parent.advertiser.info" popup-close="$parent.popup.close();")