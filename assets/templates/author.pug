include ../../views/mixins/buttons

.author__block
    .author__avatar(style="background-image: url({{author.fields.avatar && author.fields.avatar !== '' ? author.fields.avatar : '/assets/images/profile.svg'}})")
    .author__inner
        .author__field
            .author__title {{author.fields.name || 'Not specified' | translate}}
        .author__field
            span {{author.fields.contactInfo.email}}
            span.author__status-icon(class="{{author.fields.verification.is_verified ? 'success' : 'fail'}}")
                i.icon-check(ng-if="author.fields.verification.is_verified")
                i.icon-cancel(ng-if="!author.fields.verification.is_verified")
        .author__field
            | Member since:
            | {{author.fields.date | translate : 'date'}}
        .author__field
            | {{author.fields.contactInfo.phone}}

    .author__btn(popup-trigger="edit profile" ng-if="author.edit")
        +btn-default('Edit Profile').button--blue.button--invert_hover.author__btn--hidden_sm
        .btn-round.author__btn--hidden_lg(title="{{'Edit Profile' | translate}}")
            i.icon-pencil

.author__block
    .author__inner
        .author__title Deactivate account
        | This will permanently delete all pets and settings.
    .author__btn(popup-trigger="remove profile" ng-if="author.remove")
        +btn-default('Remove Profile').button--red.button--transparent
popup-content(initial="edit profile,remove profile")