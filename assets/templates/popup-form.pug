include ../../views/mixins/formParts
form.form(novalidate ng-submit="form.submit();" name="{{form.name}}")
    div(ng-transclude)
    +ng-button("form.label")(ng-click="form.check()" class="{{form.validClass}} {{form.responseClass}}")
    +button("Cancel")(class="form__btn--cancel" type="button" ng-click="form.cancel();")