nav(ng-controller="popupCtrl as popup")
    a.nav-item.nav-link(href='/') Home
    if !currentUser
        a.nav-item.nav-link(ng-click="popup.active=true;popup.type='registration';") Sign Up
        a.btn.btn-info.pull-md-right(ng-click="popup.active=true;popup.type='login';") Login
    else
        a.nav-item.nav-link(href='/profile') My Profile
        a.btn.btn-info.pull-md-right(ng-controller="logoutCtrl as ctrl" ng-click="ctrl.logout();") Logout
    div(auth-popup popup="popup")