ul.header__menu
    if !currentUser
        li.header-menu__item
            popup(type="registration")
                popup-trigger.header-menu__link(translate="SIGN_UP_BTN")
                popup-content
                    .popup__content
                        auth-form(form="registration" title="sign up")
        li.header-menu__item
            popup(type="login")
                popup-trigger.header-menu__link(translate="LOGIN_BTN")
                popup-content
                    .popup__content
                        auth-form(form="login" title="login")
    else
        if currentUser.is_admin
            li.header-menu__item
                a.header-menu__link(href='/admin' translate="ADMIN_BTN")
        li.header-menu__item
            a.header-menu__link(href='/profile' translate="PROFILE_BTN")

        li.header-menu__item
            a.header-menu__link(ng-controller="logoutCtrl as ctrl" ng-click="ctrl.logout();" translate="LOGOUT_BTN")
