include _form-parts
mixin authForm(form)
    if form == "registration"
        -var controller = "registrationCtrl as ctrl"
        -var method = "ctrl.registration();"
        -var title = "sign up"
    else if form == "login"
        -var controller = "loginCtrl as ctrl"
        -var method = "ctrl.login();"
        -var title = "login"

    form.form(ng-controller=controller ng-submit=method)
        +input("Email")(ng-model="ctrl.email" type="email")
        +input("Password")(ng-model="ctrl.password" type="password")
        +button(title)
