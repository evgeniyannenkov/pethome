include ../vars/common

//Input mixin
mixin input(label)
    .form__item
        label.form__label
            div.form__title= label
            input.form__input&attributes(attributes)

//Button mixin
mixin button(label)
    .form__item.form__item--btn
        .form__btn-wrap
            button.form__btn&attributes(attributes)
                span.form__btn-icon
                span.form__btn-title= label
            .form__progress-bar

//Textarea mixin
mixin textarea(label)
    .form__item
        label.form__label
            div.form__title= label
            textarea.form__textarea&attributes(attributes)

//Radios mixin
mixin radios(block_title, block_inputs)
    .form__item
        div.form__title= block_title
        div
            each inputs, name in block_inputs
                    each label,value in inputs
                        label.form__label
                            span= label
                            input.form__radio(type="radio" name=name ,value = value)&attributes(attributes)

//Select mixin
mixin select(label, options, without_other)
    .form__item
        div.form__title= label
        div
            each inputs, name in options
                    select.form__select(name = name)&attributes(attributes)
                        each label,value in inputs
                            option(value = value)
                                | #{label}
                        if !without_other
                            option(value = "other")
                                | Other