doctype html(lang='en')
html(ng-app="app")
    include partials/_head

    body(popup-overflow ng-class="{'hidden' : overflow}" current-user user=currentUser ? currentUser._id : "" user-admin=currentUser && currentUser.is_admin ? "true" : "false")
        block header

        .main-content
            block content

        notify
        lightbox
        block footer