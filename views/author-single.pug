extends layout
include mixins/buttons


block header
    include partials/_header

block content
    .main-content__container
        .heading
            if author.blocked
                .heading__item
                    if !author.name
                        h1 Author (Blocked)
                    else
                        h1 #{author.name} (Blocked)
                .heading__item
                    +btn-default('Unblock').button--green.button--standard_hover(popup-trigger="unblock" author-id=author._id)
            else
                .heading__item
                    if !author.name
                        h1 Author
                    else
                        h1 #{author.name}
                .heading__item
                    +btn-default('Block').button--red.button--transparent(popup-trigger="block" author-id=author._id)

        if currentUser && currentUser.is_admin
            author.author(author-id=author._id edit="true" remove="true")
        else
            author.author(author-id=author._id)

    feed(author-id=author._id hide-fields="{author:true}" all-allowed="true" enable-filter="true")

    popup-content(initial="block,unblock")
block footer
    include partials/_footer