extends layout

block header
    include partials/_header

block content
    .main-content__container
        if !currentUser.blocked
            h1 PROFILE
        else
            h1 PROFILE (Blocked)

        author.author(author-id=currentUser._id edit="true" remove="true")

        popup(type="New Advert")
            popup-trigger
                //button {{'New Advert' | translate}}
                .btn-round.btn-round--left.btn-round--double.author__btn--hidden_lg(title="{{'Edit Profile' | translate}}")
                    i.fa.fa-plus(aria-hidden="true")
                    i.fa.fa-file(aria-hidden="true")

            popup-content
                .popup__content
                    advert-create

    feed(author-id=currentUser._id hide-fields="{author:true}" enable-filter="true" all-allowed="true")

block footer
    include partials/_footer